

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <a class="btn btn-sm btn-primary" href="/student/create">Add New Student</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">

                    <table class="table table-striped studentTable">
                        <thead>
                            <tr>
                                <td>#</td>
                                <td>Name</td>
                                <td>Email</td>
                                <td>Cell</td>
                                <td>Location</td>
                                <td>Photo</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% students.forEach( (student, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %> </td>
                                    <td><%= student.name %> </td>
                                    <td><%= student.email %></td>
                                    <td><%= student.cell %></td>
                                    <td><%= student.location %></td>
                                    <td>
                                        <% if (student.photo == 'avatar.png') { %>
                                         
                                            <img src="/images/<%= student.photo %>" alt="">
                                            <% } else { %>
                                                <img src="/images/students/<%= student.photo %>" alt="">
                                             
                                        <% } %>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-info" href="#"><i class="fas fa-eye"></i></a>
                                        <a class="btn btn-sm btn-warning" href="#"><i class="fas fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger" href="#"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                            

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>